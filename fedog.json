{
    "server": {
        "port": 8080
    },
    "release": {
        "project": "small-spa",
        "domain": "//s1.mljr.com",

        "cases": {
            "dev": {
                "watch": true,
                "env": {
                    "ENV": "LOCAL",
                    "STATIC_URL": ""
                }
            },
            "qa": {
                "domain": true,
                "www": "../__dist/",
                "env": {
                    "ENV": "LOCAL",
                    "STATIC_URL": "//s1.mljr.com"
                }
            },
            "www": {
                "optimize": true,
                "version": true,
                "domain": true,
                "www": "../__dist/",
                "env": {
                    "ENV": "ONLINE",
                    "STATIC_URL": "//s1.mljr.com"
                }
            }
        },

        "copy": [
            "**/*.min.js",
            "**/*.min.css",
            "static/styles/libs/**/*"
        ],
        "ignore": [
            "config.rb",
            "fedog.json",
            "tsconfig.json",
            "run.py",
            "fis-conf.js"
        ]
    },
    "deploy": {
        "beRelease": "../fenqi-crm/fenqi-crm-web/src/main/webapp/WEB-INF/views",
        "feReleaseGit": "git@gitlab.youjie.com:fe-release-group/o2o-crm.git"
    }
}
